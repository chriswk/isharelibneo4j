%p#notice= notice

%p
  %b Name:
  = @person.name
%p
  %b Birth date:
  = @person.birth_date

%table.table-striped
  %thead
    %tr
      %th Title
      %th As
      %th Role name
  %tbody
  - @person.acted_in_rels.each do |role|
    %tr
      %td= link_to role.end_node.title, movie_url(role.end_node.id)
      %td= role.job
      %td= role.character

= link_to 'Edit', edit_person_path(@person)
\|
= link_to 'Back', people_path
